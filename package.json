{
  "name": "energy-strategies",
  "version": "0.0.1",
  "description": "Energy strategies",
  "private": true,
  "scripts": {
    "clean-all": "rm -r node_modules dist typings/globals typings/index.d.ts",
    "build-all": "npm install && typings install && npm run build",
    "rebuild": "npm run clean-all && npm run build-all",
    "clean": "rm -rf dist/",
    "prep": "typings install && mkdir -p dist && cat node_modules/material-design-lite/material.min.js node_modules/d3/d3.min.js node_modules/c3/c3.min.js node_modules/seedrandom/seedrandom.min.js > dist/lib.js",
    "build-data": "cp -R data/ dist/data/",
    "build-css": "cat node_modules/material-design-lite/material.min.css node_modules/c3/c3.min.css css/*.css > dist/bundle.css",
    "watch-css": "node_modules/catw/bin/cmd.js node_modules/material-design-lite/material.min.css node_modules/c3/c3.min.css 'css/*.css' -o dist/bundle.css",
    "build-html": "cat index.html > dist/index.html",
    "watch-html": "node_modules/catw/bin/cmd.js index.html -o dist/index.html",
    "build-js": "browserify main.ts -p [tsify] | uglifyjs -c > dist/bundle.js",
    "watch-js": "watchify main.ts -p [tsify] -v --debug -o dist/bundle.js",
    "test": "npm run build && ./node_modules/karma/bin/karma start --single-run",
    "test-watch": "npm run build && ./node_modules/karma/bin/karma start",
    "build": "npm run prep && npm run build-js && npm run build-css && npm run build-html && npm run build-data",
    "watch": "npm run prep & npm run watch-js & npm run watch-css & npm run watch-html",
    "serve": "http-server dist/",
    "serve-watch": "http-server dist/ & npm run watch"
  },
  "devDependencies": {
    "http-server": "^0.9.0",
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
    "karma-browserify": "^5.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.0.2",
    "tsify": "^3.0.1",
    "tslint": "^4.5.1",
    "typescript": "^2.2.1",
    "typings": "^2.1.0",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "c3": "0.4.11",
    "catw": "^1.0.1",
    "d3": "^3.5.16",
    "es6-promise": "^4.0.5",
    "material-design-lite": "^1.1.3",
    "ndarray": "^1.0.18",
    "seedrandom": "^2.4.2",
    "url-search-params-polyfill": "^1.1.0"
  }
}
